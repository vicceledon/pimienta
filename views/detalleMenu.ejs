          <h4><%=detallePlato.descripcionDetallada%></h4>
          <% } else { %>
          <h4>Plato t√≠pico</h4>
          <% } %>
          <p class="ps-text-grey">U$S <%=detallePlato.precio%></p>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/<%=detallePlato.img%>"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%-include('./partials/footer')%>
    </div>
  </body>
</html>
