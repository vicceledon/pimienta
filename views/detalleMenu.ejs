<!DOCTYPE html>
<html>
  <head>
    <%-include('./partials/head')%>
  </head>
  <body>
    <!-- Navbar (sit on top) -->
    <%-include('./partials/navHeader')%>
    <!-- Header -->
    <%-include('./partials/header')%>
