<!DOCTYPE html>
<html>
  <head>
    <%-include('./partials/head')%>
  </head>
  <body>
    <!-- Navbar (sit on top) -->
    <%-include('./partials/navHeader')%>
    <!-- Header -->
    <%-include('./partials/header')%>
    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <div class="ps-row ps-padding-64" id="about">
        <div class="ps-col m6 ps-padding-large ps-hide-small">
          <img
            src="/images/principal.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="SAbores que enamoran"
            width="600"
            height="750"
          />
        </div>

        <div class="ps-col m6 ps-padding-large">
          <h1 class="ps-center"><%=about.titulo%></h1>
          <br />
          <p class="ps-large">
            <%=about.descripcion%>
            <!--es necesario incluir este span en el contenido dinámico previo-->
            <span class="ps-tag ps-light-grey">seasonal</span>
          </p>
          <p class="ps-large ps-text-grey ps-hide-medium">
            <%=about.historia%>
          </p>
        </div>
      </div>

      <hr />
      <!-- Menu Section -->
      <!-- Mostrar el menú de forma dinámica-->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuentro Menu</h1>
          <br />

          <% listaPlatos.forEach(platos => { %>

          <h4><a href="/detalleMenu/<%=platos.id%>"><%=platos.titulo%></a></h4>
          <p class="ps-text-grey">
            <%=platos.descripcionCorta%> U$S <%=platos.precio%>
          </p>
          <br />

          <% }) %>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%-include('./partials/footer')%>
    </div>
  </body>
</html>
